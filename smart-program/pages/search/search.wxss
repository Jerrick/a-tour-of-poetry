.map_container{
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    position: fixed;
    top:0;
    left: 0;
    right: 0;
    bottom: 0;
}
.search{
     position: absolute;
     top:15px;
     left: 10px;
     right: 10px;
}
.search-input{
     background-color: #fff;
     border-radius: 10px;
}
.weui-input{
    line-height: 40px;
    height: 40px;
    padding-left: 10px;
}
.map {
    width: 100%;
    flex:1;
}
.content{
    padding: 20rpx;
    height: 300rpx;
    display: flex;
    flex-direction: column;
}
.contentlist{
    height: 200rpx;
    overflow:auto;
}